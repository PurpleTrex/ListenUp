<Window x:Class="ListenUp.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListenUp.App"
        mc:Ignorable="d"
        Title="ListenUp (WPF)" Height="700" Width="1000">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <local:InverseBoolConverter x:Key="InverseBoolConverter" />
    </Window.Resources>
    
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Settings" Click="OnSettings"/>
                <Separator/>
                <MenuItem Header="_Exit" Click="OnExit"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Show _Favorites" Click="OnShowFavorites"/>
                <MenuItem Header="Show _Search" Click="OnShowSearch"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="OnAbout"/>
            </MenuItem>
        </Menu>
        
        <!-- Header -->
        <StackPanel Orientation="Vertical" Margin="16" DockPanel.Dock="Top">
            <TextBlock Text="ListenUp - Public Domain Reader &amp; Audiobook Player" FontSize="20" FontWeight="Bold" />
            <StackPanel Orientation="Horizontal" Margin="0,12,0,4">
                <TextBox Width="400" Margin="0,0,8,0" x:Name="SearchBox" Text="{Binding Query, UpdateSourceTrigger=PropertyChanged}" ToolTip="Search books or authors" KeyDown="OnSearchKeyDown"/>
                <Button Width="100" Content="Search" Click="OnSearch" IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}, FallbackValue=True}" Margin="0,0,8,0"/>
                <Button Width="120" Content="⭐ Favorites" Click="OnShowFavorites" Margin="0,0,8,0"/>
                <Button Width="100" Content="⚙ Settings" Click="OnSettings"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="{Binding Status}" Foreground="DarkSlateGray" />
                <ProgressBar Width="100" Height="16" Margin="12,0,0,0" IsIndeterminate="True" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>
        </StackPanel>

        <!-- Results -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="8">
            <ItemsControl ItemsSource="{Binding Results}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Padding="12" Margin="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Cover Art -->
                                <Border Grid.Column="0" Width="100" Height="140" Background="#F0F0F0" CornerRadius="4" Margin="0,0,16,0">
                                    <Grid>
                                        <Image Source="{Binding CoverUrl}" Stretch="UniformToFill">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Style.Triggers>
                                                        <Trigger Property="Source" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                        <TextBlock Text="📚" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#999">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CoverUrl}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                                
                                <!-- Details -->
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="18" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding AuthorDisplay}" Foreground="Gray" FontSize="14" Margin="0,4,0,0"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,8">
                                        <TextBlock Text="📄 Text" Visibility="{Binding HasText, Converter={StaticResource BoolToVisibilityConverter}}" Background="#FFEFEF" Padding="6,3" Margin="0,0,8,0"/>
                                        <TextBlock Text="🎧 Audio" Visibility="{Binding HasAudio, Converter={StaticResource BoolToVisibilityConverter}}" Background="#E6F4FF" Padding="6,3"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="📖 Read" Click="OnRead" IsEnabled="{Binding HasText}" Padding="10,6" Margin="0,0,8,0"/>
                                        <Button Content="🎧 Listen" Click="OnListen" IsEnabled="{Binding HasAudio}" Padding="10,6" Margin="0,0,8,0"/>
                                        <Button x:Name="FavoriteBtn" Content="⭐ Favorite" Click="OnToggleFavorite" Padding="10,6" Tag="{Binding}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Window>
