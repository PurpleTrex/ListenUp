<Window x:Class="ListenUp.App.Windows.EpubReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="EPUB Reader" Height="700" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="12" BorderBrush="#DDD" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="TitleText" FontSize="18" FontWeight="Bold"/>
                    <TextBlock x:Name="AuthorText" FontSize="14" Foreground="Gray" Margin="0,4,0,0"/>
                </StackPanel>
                <Button Grid.Column="1" Content="Table of Contents" Click="OnShowToc" Padding="12,6"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="40,20">
            <TextBlock x:Name="ContentText" TextWrapping="Wrap" FontSize="16" LineHeight="28"/>
        </ScrollViewer>

        <!-- Navigation -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="12" BorderBrush="#DDD" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="PrevButton" Grid.Column="0" Content="← Previous" Click="OnPrevious" Padding="12,6" Margin="0,0,8,0"/>
                <TextBlock x:Name="ChapterInfo" Grid.Column="1" VerticalAlignment="Center" TextAlignment="Center"/>
                <Button x:Name="NextButton" Grid.Column="2" Content="Next →" Click="OnNext" Padding="12,6" Margin="8,0,0,0"/>
            </Grid>
        </Border>

        <!-- TOC Popup -->
        <Border x:Name="TocPanel" Grid.Row="0" Grid.RowSpan="3" Background="#F0FFFFFF" Visibility="Collapsed">
            <Border Background="White" BorderBrush="#DDD" BorderThickness="1" MaxWidth="400" Margin="50">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Table of Contents" FontSize="18" FontWeight="Bold" Padding="16"/>
                    <ListBox x:Name="TocList" Grid.Row="1" SelectionChanged="OnTocSelection" BorderThickness="0" Padding="8"/>
                    <Button Grid.Row="2" Content="Close" Click="OnCloseToc" Padding="12,6" Margin="16"/>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
